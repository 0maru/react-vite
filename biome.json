{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"files": {
		"ignore": ["turbo/generators/templates/*.hbs"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "crlf",
    "lineWidth": 100
	},
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
